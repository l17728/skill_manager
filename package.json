{
  "name": "skillmanager",
  "version": "1.0.0",
  "description": "Prompt & Skill Comparison, Verification & Optimization Platform",
  "main": "main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test --config tests/e2e/playwright.config.js",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "jest": "^29.0.0"
  },
  "dependencies": {
    "uuid": "^9.0.0"
  },
  "build": {
    "appId": "com.skillmanager.app",
    "productName": "SkillManager",
    "files": [
      "**/*",
      "!tests/**",
      "!dist/**",
      "!docs/**",
      "!scripts/**",
      "!workspace/**",
      "!*.md",
      "!.git/**",
      "!.claude/**"
    ],
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": null,
      "uninstallerIcon": null
    },
    "directories": {
      "output": "dist"
    }
  }
}
